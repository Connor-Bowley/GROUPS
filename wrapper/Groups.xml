<?xml version="1.0" encoding="utf-8"?>
<executable>
    <title>Group-wise Registration for Shape Correspondence (Groups)</title>
    <version>1.0</version>
    <contributor>Ilwoo Lyu</contributor>
    <description>Refer to the following papers for details - Lyu et al. IPMI 2013, Lyu et al. Frontiers in Neuroscience 2015</description>
    <parameters>
        
        <label>Input parameters</label>
        <description>Input parameters</description>

        <directory>
            <longflag>propertyDir</longflag>
            <name>dirProperty</name>
            <description>provides a directory of property files</description>
        </directory>
        
        <directory>
            <longflag>sphereDir</longflag>
            <name>dirSphere</name>
            <description>provides a directory of sphere files</description>
        </directory>
        <string-vector>
            <longflag>sphere</longflag>
            <flag>s</flag>
            <name>listSphere</name>
            <description>provides a list of sphere files</description>
        </string-vector>

       <!--  <directory>
            <longflag>landmarkDir</longflag>
            <name>dirLandmark</name>
            <description>provides a directory of landmark files</description>
        </directory> -->
        <directory>
            <longflag>coefficientDir</longflag>
            <name>dirCoeff</name>
            <description>provides a directory of previous spherical harmonics coefficient files</description>
        </directory>
        <directory>
            <longflag>surfaceDir</longflag>
            <name>dirSurf</name>
            <description>provides a directory of surface model files for location information</description>
        </directory>

        <string-vector>
            <longflag>property</longflag>
            <flag>p</flag>
            <name>listProperty</name>
            <description>provides a list of property files</description>
        </string-vector>
        

        <!-- <string-vector>
            <longflag>landmark</longflag>
            <flag>l</flag>
            <name>listLandmark</name>
            <description>provides a list of landmark files</description>
        </string-vector> -->
        <string-vector>
            <longflag>coefficient</longflag>
            <flag>c</flag>
            <name>listCoeff</name>
            <description>provides a list of previous spherical harmonics coefficient files</description>
        </string-vector>
        <string-vector>
            <longflag>surface</longflag>
            <name>listSurf</name>
            <description>provides a list of surface model files for location information</description>
        </string-vector>
        <float-vector>
            <longflag>weight</longflag>
            <flag>w</flag>
            <name>listWeight</name>
            <description>provides a list of output files</description>
        </float-vector>
        <integer>
            <longflag>degree</longflag>
            <flag>d</flag>
            <name>degree</name>
            <default>5</default>
            <description>provides a degree of spherical harmonics decomposition</description>
        </integer>
        <integer>
            <longflag>maxIter</longflag>
            <name>maxIter</name>
            <default>10000</default>
            <description>provides the maxmum number of iterations</description>
        </integer>
        <float>
            <longflag>locationWeight</longflag>
            <name>weightLoc</name>
            <description>provides a weighting factor of location information</description>
            <default>0</default>
        </float>
        <string-vector>
            <longflag>filter</longflag>
            <name>listFilter</name>
            <description>provides a list of suffix filters to select desired property files</description>
        </string-vector>
    </parameters>

    <parameters advanced = "true">
        <boolean>
            <name>landmarksOn</name>
            <default>false</default>
            <label>Activate the use of landmarks</label>
            <longflag>landmarksOn</longflag>
            <description>Activate the use of landmarks</description> 
        </boolean>

        <boolean>
            <name>MaxCurvOn</name>
            <default>false</default>
            <label>Activate the use of Maximum curvature as property</label>
            <longflag>MaxCurvOn</longflag>
            <description>Activate the use of Maximum curvature as property</description> 
        </boolean>

        <float multiple="false">
            <name>MaxCurvWeight</name>
            <label>Weight of Maximum curvature</label>
            <longflag>MaxCurvWeight</longflag>
            <default>1.0</default>
            <channel>input</channel>
            <description>Weight of Maximum curvature</description>
        </float>

        <boolean>
            <name>MinCurvOn</name>
            <default>false</default>
            <label>Activate the use of Minimum curvature as property</label>
            <longflag>MinCurvOn</longflag>
            <description>Activate the use of Minimum curvature as property</description> 
        </boolean>

        <float multiple="false">
            <name>MinCurvWeight</name>
            <label>Weight of Minimum curvature</label>
            <longflag>MinCurvWeight</longflag>
            <default>1.0</default>
            <channel>input</channel>
            <description>Weight of Minimum curvature</description>
        </float>

        <boolean>
            <name>MeanCurvOn</name>
            <default>false</default>
            <label>Activate the use of Mean curvature as property</label>
            <longflag>MeanCurvOn</longflag>
            <description>Activate the use of Mean curvature as property</description> 
        </boolean>

        <float multiple="false">
            <name>MeanCurvWeight</name>
            <label>Weight of Mean curvature</label>
            <longflag>MeanCurvWeight</longflag>
            <default>1.0</default>
            <channel>input</channel>
            <description>Weight of Mean curvature</description>
        </float>

        <boolean>
            <name>GaussCurvOn</name>
            <default>false</default>
            <label>Activate the use of Gaussian curvature as property</label>
            <longflag>GaussCurvOn</longflag>
            <description>Activate the use of Gaussian curvature as property</description> 
        </boolean>

        <float multiple="false">
            <name>GaussCurvWeight</name>
            <label>Weight of Gaussian curvature</label>
            <longflag>GaussCurvWeight</longflag>
            <default>1.0</default>
            <channel>input</channel>
            <description>Weight of Gaussian curvature</description>
        </float>

        <boolean>
            <name>ShapeIndexOn</name>
            <default>false</default>
            <label>Activate the use of Shape Index as property</label>
            <longflag>ShapeIndexOn</longflag>
            <description>Activate the use of Shape Index as property</description> 
        </boolean>

        <float multiple="false">
            <name>ShapeIndexWeight</name>
            <label>Weight of Shape Index</label>
            <longflag>ShapeIndexWeight</longflag>
            <default>1.0</default>
            <channel>input</channel>
            <description>Weight of Shape Index</description>
        </float>

        <boolean>
            <name>CurvednessOn</name>
            <default>false</default>
            <label>Activate the use of Curvedness as property</label>
            <longflag>CurvednessOn</longflag>
            <description>Activate the use of Curvedness as property</description> 
        </boolean>

        <float multiple="false">
            <name>CurvednessWeight</name>
            <label>Weight of Curvedness</label>
            <longflag>CurvednessWeight</longflag>
            <default>1.0</default>
            <channel>input</channel>
            <description>Weight of Curvedness</description>
        </float>

        <boolean>
            <name>phiOn</name>
            <default>false</default>
            <label>Activate the use of phi as property</label>
            <longflag>phiOn</longflag>
            <description>Activate the use of phi as property</description> 
        </boolean>

        <float multiple="false">
            <name>phiWeight</name>
            <label>Weight of phi</label>
            <longflag>phiWeight</longflag>
            <default>1.0</default>
            <channel>input</channel>
            <description>Weight of phi</description>
        </float>

        <boolean>
            <name>thetaOn</name>
            <default>false</default>
            <label>Activate the use of theta as property</label>
            <longflag>thetaOn</longflag>
            <description>Activate the use of theta as property</description> 
        </boolean>

        <float multiple="false">
            <name>thetaWeight</name>
            <label>Weight of theta</label>
            <longflag>thetaWeight</longflag>
            <default>1.0</default>
            <channel>input</channel>
            <description>Weight of theta</description>
        </float>

    </parameters>

    <parameters>
        <label>Output parameters</label>
        <description>Output parameters</description>
        <directory>
            <longflag>outputDir</longflag>
            <name>dirOutput</name>
            <description>provides a directory of output files</description>
        </directory>
        <string-vector>
            <longflag>output</longflag>
            <flag>o</flag>
            <name>listOutput</name>
            <description>provides a list of output files</description>
        </string-vector>
    </parameters>
</executable>
